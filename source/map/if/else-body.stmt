import { IfBodyStatement } from "./if-body.stmt";

export let ElseBodyStatement = function(){
	/**
	 * else 主体语句
	 * @param {Statements} statements - 该语句将要所处的语句块
	 */
	return class ElseBodyStatement extends IfBodyStatement {
		/**
		 * 捕获处理异常
		 * @param {SyntaxParser} parser - 语法解析器
		 * @param {Context} context - 语法标签上下文
		 * @returns {SyntaxTag}
		 */
		catch(parser, context){
			// 跳出语句并设置 elseBody
			this.out().elseBody = this.expression;
		};
	};
}();