import { ECMAScriptStatement } from "../ecmascript/ecmascript.stmt";

export let TerminatedFlowStatement = function(){
	/**
	 * 中断流语句
	 * @param {Statements} statements - 该语句将要所处的语句块
	 */
	return class TerminatedFlowStatement extends ECMAScriptStatement {
		/**
		 * 尝试处理异常
		 * @param {SyntaxParser} parser - 语法解析器
		 * @param {Context} context - 语法标签上下文
		 * @returns {SyntaxTag}
		 */
		catch(parser, context){
			// 跳出语句并设置 object
			this.out().object = this.expression;
		};
	};
}();